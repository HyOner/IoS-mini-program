<view class="container">
    <view class="remind-box" wx:if="{{remind}}">
        <image class="remind-img" src="../../data/images/loading.gif"></image>
    </view>
    <block wx:else>
        <image class="title" src="../../data/images/logo.png"></image>
        </block>
        <view class="content">
            <view class="hd">
                <image class="logo" bindtap="bindViewTap" src="{{userInfo.avatarUrl}}"></image>
                <image class="wave" src="../../data/images/wave.png" mode="aspectFill"></image>
                <image class="wave wave-bg" src="../../data/images/wave.png" mode="aspectFill"></image>
            </view>
            <view class="bd">
                <view class="confirm-btn" bindtap='goToIndex'>
                    <text>进入 IoS</text>
                </view>
                <button wx:if="{{!userAuthorization}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo">微信授权</button>
                
                <text class="copyright" style="top:{{userAuthorization?'23.5':'5'}}%">© {{year}} IoS-校园闲置新平台</text>
            </view>
        </view>
</view>