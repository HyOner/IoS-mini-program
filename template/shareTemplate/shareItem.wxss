.sbox {
    height: 30px;
    line-height: 30px;
    
}

.introduction {
    border-radius: 8px 8px 0 0;
    height: inherit;
    padding-bottom: 5px;
    margin-bottom: 10px;
    background: rgba(44,45,50,0.9);
}

.tag {
    margin-left: 15px;
    height: 19px;
    width: 38px;
    text-align: center;
    border-radius: 10px;
    line-height: 15.5px;
    background: #46cb84;
    display: inline-block;
}

.tag text {
    font-size: 13px;
    color:#333;
    font-weight: 400;
    letter-spacing: 1rpx;
}

.user {
    font-size: 14px;
    margin-left: 14px;
    margin-right: 7px;
    color: #fcfbf9
}

.time {
    float: right;
    margin-right: 20px;
    font-size: 13px;
    color: #b3b3b5
}

.title-box {
    width: 720rpx;
    height: 38px;
    margin: 0 0 0 15px;
    line-height: 45px;
    white-space: nowrap;
    text-overflow: ellipsis;
    -o-text-overflow: ellipsis;
    overflow: hidden;
}

.title {
    width: inherit;
    font-size: 16px;
    color: #46cb84
}

swiper {
    margin: 0 5px;
}

.swiper {
    height: 150px;
}

.swiper-img {
    width: 100%;
    height: 140px
}

.detail-text {
    font-size: 15px;
    word-break: break-all;
}

.detail-footer {
    height: 30px;
}

.price {
    margin-left: 10px;
    font-size: 18px;
    color: #ff640b;
    line-height: 30px;
}

.contact {
    font-size: 16px;
    font-weight: bold;
    float: right;
    margin-right: 10px;
    line-height: 30px;
}

