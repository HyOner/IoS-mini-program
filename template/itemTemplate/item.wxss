.item-container {
    display: flex;
    flex-direction: column;
    width: inherit;
    height: 76px;
    box-sizing: border-box;
}

.sbox {
    height: 30px;
    line-height: 30px;
}

.introduction {
    height: inherit;
    padding-bottom: 10px;
}

.tag {
    margin-left: 15px;
    height: 19px;
    width: 34px;
    text-align: center;
    border-radius: 1px;
    line-height: 15px;
    background: #e7e7e7;
    display: inline-block;
}

.tag text {
    font-size: 13px;
    color: #787878;
    font-weight: 300;
    letter-spacing: 1rpx;
}

.user {
    font-size: 14px;
    margin-left: 14px;
    margin-right: 7px;
}

.time {
    float: right;
    margin-right: 20px;
    font-size: 13px;
    color: #999
}

.title-box {
    width: 675rpx;
    height: 38px;
    margin: 0 0 5px 15px;
    line-height: 45px;
    white-space: nowrap;
    text-overflow: ellipsis;
    -o-text-overflow: ellipsis;
    overflow: hidden;
}

.title {
    width: inherit;
    font-size: 16px;
    color: #333
}

.swiper {
    height: 200px;
    weight: 100%;
    margin: 10px 10px 0 10px;
    /* background: #999; */
}

.swiper-img {
    width: 100%;
    height: 140px
}

.detail-box {
    /* background: #999; */
    width: 100%;
    height: 200px;
}

.detail-text {
    font-size: 15px;
    word-break: break-all;
}

.detail-footer {
    height: 30px;
}

.price {
    margin-left: 10px;
    font-size: 18px;
    color: red;
    line-height: 30px;
}

.contact {
    font-size: 16px;
    font-weight: bold;
    float: right;
    margin-right: 10px;
    line-height: 30px;
}

.footer {
    display: flex;
    flex-direction: row;
}

.footer-img {
    width: 28px;
    height: 28px;
    margin-left: 10px;
}

.img-box {
    width: 12%;
    display: inline-block;
    text-align: center;
}

.up-box {
    width: 74%;
    display: inline-block;
}

.up-img {
    width: 30px;
    height: 30px;
    margin-left: 254rpx
}